{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": true,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "jsx-a11y"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-has-content": "error",
    "jsx-a11y/click-events-have-key-events": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-extra-semi": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.min.js",
    "*.config.js"
  ],
  "overrides": [
    {
      "files": ["src/App.jsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["src/**/*.jsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["api/**/*.js", "server.js", "convert-images.js"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "warn"
      }
    }
  ]
}
